@model Eshop_HoangAnhHuy.Models.Invoice

@{
    ViewData["Title"] = "Create";
}
<div id="content" class="float_r">
    <form asp-controller="Invoices" asp-action="Create" method="post">
        <h2>Checkout</h2>
        <h5><strong>BILLING INFORMATION</strong></h5>
        <div class="content_half float_l checkout">
            Full Name (must be same as on your credit card):
            <input type="hidden" asp-for="Id" />
            <input type="text" style="width:300px;" value="@ViewBag.Account.FullName" readonly />
            <input type="hidden" asp-for="AccountId" value="@ViewBag.Account.Id" />
            <br />
            <br />
            Address:
            <input type="text" style="width:300px;" asp-for="ShippingAddress" />
            <br />
            <br />
            PHONE<br />
            <span style="font-size:10px">Please, specify your reachable phone number. YOU MAY BE GIVEN A CALL TO VERIFY AND COMPLETE THE ORDER.</span>
            <input type="text" style="width:300px;" asp-for="ShippingPhone" value="@ViewBag.Account.Phone" />
        </div>

        <div class="content_half float_r checkout">
            
        </div>

        <div class="cleaner h50"></div>
        <h4>TOTAL AMOUNT: <strong><input type="number" asp-for="Total" value="@Convert.ToInt32(ViewBag.Total)" readonly disabled style="border: none; color: red"/></strong></h4>
        <p>
        </p>
        <button type="submit">Buy</button>
    </form>
</div>
<div class="cleaner"></div>
